; Top-most EditorConfig file
root = true

; Global settings
[*]
trim_trailing_whitespace = true
insert_final_newline = true

[*.md]
indent_style = space
indent_size = 4
charset = utf-8

; HSP3 (non-utf8)
[*.{hsp,as,hs}]
indent_style = tab
tab_width = 4
charset = shift-jis

; C++
[*.{c,cc,cpp,cxx,h,hh,hpp,hxx}]
indent_style = tab
tab_width = 4

; Visual Studio
[*.sln]
indent_style = tab
indent_size = 4

[*.{vcxproj,vcxproj.filters}]
indent_style = space
indent_size = 2
